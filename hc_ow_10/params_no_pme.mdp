; in case of posres, etc
; define        =

; RUN CONTROL shit

integrator      = md
dt              = 0.001
; set to taste
nsteps          = 5000

comm-mode       = None
nstcomm         = 10
comm-grps       = System

; OUTPUT CONTROL
nstxout         = 10
nstvout         = 10
nstfout         = 10
; Change if you want to output energies more often
nstenergy       = 10
nstlog          = 500

; NEIGHBOR SEARCHING
nstlist         = 0
ns_type         = simple
pbc             = xyz
rlist           = 0.9

; ELECTROSTATICS
coulombtype     = cut-off
rcoulomb        = 0.9

; EWALD stuff
fourierspacing  = 0.10
pme_order       = 6
ewald_rtol      = 1e-6
ewald_geometry  = 3d
optimize_fft    = no

; VDW
vdwtype         = cut-off
rvdw            = 0.9
DispCorr        = no

; TEMPERATURE COUPLING
; Used for NVT equilibration only - Berendsen doesn't reproduce correct kinetic ensemble
tcoupl          = No

; VELOCITY GENERATION
gen_vel         = no
gen_temp        = 300
gen_seed        = -1

; BOND CONSTRAINTS
constraints          = h-bonds
constraint-algorithm = lincs
lincs_order          = 4
lincs_iter           = 1
continuation         = no

free_energy     = yes
init_lambda     = 0.0
foreign_lambda  = 0.0 0.5 1.0

